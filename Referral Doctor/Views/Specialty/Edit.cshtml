@model Referral_Doctor.Models.Specialty

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Specialty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SpecialtyId" />
            <div class="form-group">
                <label asp-for="SpecialtyName" class="control-label"></label>
                <input asp-for="SpecialtyName" class="form-control" />
                <span asp-validation-for="SpecialtyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deleted" class="control-label">Please inpute true or false</label>
                <input asp-for="Deleted" class="form-control" />
                <span asp-validation-for="Deleted" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" id="saveButton" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@* 若无修改，则不能点击Save *@
@section Scripts {
    <script>
        $(document).ready(function () {
            // 获取表单的原始值
            var originalFormValues = {
                SpecialtyName: $("#SpecialtyName").val(),
                Note: $("#Note").val(),
                Deleted: $("#Deleted").val()
            };

            // 检查字段变化
            function checkFormChanges() {
                var currentFormValues = {
                    SpecialtyName: $("#SpecialtyName").val(),
                    Note: $("#Note").val(),
                    Deleted: $("#Deleted").val()
                };

                return JSON.stringify(currentFormValues) !== JSON.stringify(originalFormValues);
            }

            // 当字段变化时更新按钮状态
            function updateButtonState() {
                var isFormChanged = checkFormChanges();
                $("#saveButton").prop("disabled", !isFormChanged);
            }

            // 监听字段变化事件
            $("#SpecialtyName, #Note, #Deleted").change(function () {
                updateButtonState();
            });

            // 初始化按钮状态
            updateButtonState();
        });
    </script>
}